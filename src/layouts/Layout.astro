---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "LEAR - Centro de Fisioterapia & Rehabilitación Integral" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/imagotipo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-lear-bg-primary">
    <!-- Header / Navigation -->
    <header class="bg-white/80 backdrop-blur-xl shadow-lg sticky top-0 z-50 border-b border-lear-gray-200">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-2">
            <img
              src="/images/logo.svg"
              alt="LEAR Logo"
              class="h-16 w-auto"
            />
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex space-x-2">
            <a href="/" class="relative px-4 py-2 text-lear-gray-700 hover:text-lear-primary transition-all font-semibold group">
              <span class="relative z-10">Inicio</span>
              <div class="absolute inset-0 bg-gradient-to-r from-lear-primary/10 to-lear-secondary/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </a>
            <a href="/servicios" class="relative px-4 py-2 text-lear-gray-700 hover:text-lear-primary transition-all font-semibold group">
              <span class="relative z-10">Servicios</span>
              <div class="absolute inset-0 bg-gradient-to-r from-lear-primary/10 to-lear-secondary/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </a>
            <a href="/equipo" class="relative px-4 py-2 text-lear-gray-700 hover:text-lear-primary transition-all font-semibold group">
              <span class="relative z-10">Equipo</span>
              <div class="absolute inset-0 bg-gradient-to-r from-lear-primary/10 to-lear-secondary/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </a>
            <a href="/sobre-nosotros" class="relative px-4 py-2 text-lear-gray-700 hover:text-lear-primary transition-all font-semibold group">
              <span class="relative z-10">Sobre Nosotros</span>
              <div class="absolute inset-0 bg-gradient-to-r from-lear-primary/10 to-lear-secondary/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </a>
          </div>

          <!-- Mobile menu button -->
          <button
            id="mobile-menu-button"
            class="md:hidden p-2 rounded-md text-lear-gray-700 hover:text-lear-primary hover:bg-lear-gray-100"
            aria-label="Abrir menú"
          >
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col space-y-3">
            <a href="/" class="text-lear-gray-700 hover:text-lear-primary transition-colors font-medium px-2 py-1">
              Inicio
            </a>
            <a href="/servicios" class="text-lear-gray-700 hover:text-lear-primary transition-colors font-medium px-2 py-1">
              Servicios
            </a>
            <a href="/equipo" class="text-lear-gray-700 hover:text-lear-primary transition-colors font-medium px-2 py-1">
              Equipo
            </a>
            <a href="/sobre-nosotros" class="text-lear-gray-700 hover:text-lear-primary transition-colors font-medium px-2 py-1">
              Sobre Nosotros
            </a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="relative bg-gradient-to-br from-lear-primary-dark via-lear-primary to-lear-primary-dark text-white mt-auto overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-lear-secondary rounded-full blur-3xl"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-lear-accent rounded-full blur-3xl"></div>
      </div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
          <!-- About -->
          <div>
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center shadow-lg p-2">
                <img src="/images/imagotipo.svg" alt="LEAR" class="w-full h-full object-contain" />
              </div>
              <h3 class="text-2xl font-bold">LEAR</h3>
            </div>
            <p class="text-white/80 text-sm leading-relaxed">
              Centro de Fisioterapia & Rehabilitación Integral dedicado a tu bienestar y recuperación.
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-lg font-bold mb-6 flex items-center gap-2">
              <div class="w-1 h-6 bg-gradient-to-b from-lear-secondary to-lear-accent rounded-full"></div>
              Enlaces Rápidos
            </h3>
            <ul class="space-y-3">
              <li>
                <a href="/servicios" class="group inline-flex items-center gap-2 text-white/80 hover:text-lear-secondary-light transition-all">
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  Servicios
                </a>
              </li>
              <li>
                <a href="/equipo" class="group inline-flex items-center gap-2 text-white/80 hover:text-lear-secondary-light transition-all">
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  Equipo
                </a>
              </li>
              <li>
                <a href="/sobre-nosotros" class="group inline-flex items-center gap-2 text-white/80 hover:text-lear-secondary-light transition-all">
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  Sobre Nosotros
                </a>
              </li>
              <li>
                <a href="/politica-citas" class="group inline-flex items-center gap-2 text-white/80 hover:text-lear-secondary-light transition-all">
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  Política de Citas
                </a>
              </li>
            </ul>
          </div>

          <!-- Contact -->
          <div>
            <h3 class="text-lg font-bold mb-6 flex items-center gap-2">
              <div class="w-1 h-6 bg-gradient-to-b from-lear-secondary to-lear-accent rounded-full"></div>
              Contacto
            </h3>
            <div class="space-y-4">
              <!-- Dirección -->
              <div class="flex items-start gap-3 text-white/80">
                <div class="w-10 h-10 bg-white/10 backdrop-blur rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div class="text-sm leading-relaxed">
                  <p class="font-medium text-white mb-1">Ubicación</p>
                  <p>Av. Juarez 368, Primero de Cobián Centro</p>
                  <p>27000 Torreón, Coah.</p>
                </div>
              </div>
              
              <!-- Horario -->
              <div class="flex items-start gap-3 text-white/80">
                <div class="w-10 h-10 bg-white/10 backdrop-blur rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="text-sm leading-relaxed">
                  <p class="font-medium text-white mb-1">Horario</p>
                  <p>Mar - Vie: 10:00 am - 1:00 pm</p>
                  <p>2:00 pm - 7:00 pm</p>
                  <p>Sáb: 10:00 am - 5:00 pm</p>
                </div>
              </div>
              
              <!-- WhatsApp -->
              <div class="pt-2">
                <a
                  href="https://wa.me/528711069004"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group inline-flex items-center gap-3 bg-[#25D366] hover:bg-[#20BA5A] text-white px-5 py-3 rounded-xl font-semibold transition-all hover:scale-105 shadow-lg hover:shadow-xl"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                  </svg>
                  <span>Contáctanos por WhatsApp</span>
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
                <div class="mt-2 space-y-1">
                  <p class="text-xs text-white/60">
                    Responde en minutos
                  </p>
                  <a href="/politica-citas" class="text-xs text-white/80 hover:text-white underline transition-colors inline-block">
                    Ver política de citas →
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="border-t border-white/10 pt-8 text-center">
          <p class="text-white/60 text-sm">
            &copy; {new Date().getFullYear()} LEAR - Centro de Fisioterapia & Rehabilitación Integral. Todos los derechos reservados.
          </p>
        </div>
      </div>
    </footer>

    <!-- Mobile menu toggle script -->
    <script>
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
