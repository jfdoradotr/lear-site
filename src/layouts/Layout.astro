---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "LEAR - Centro de Fisioterapia & Rehabilitación Integral" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-[--color-lear-gray-50]">
    <!-- Header / Navigation -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-2">
            <img
              src="/images/logo.png"
              alt="LEAR Logo"
              class="h-16 w-auto"
            />
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex space-x-8">
            <a href="/" class="text-[--color-lear-gray-700] hover:text-[--color-lear-primary] transition-colors font-medium">
              Inicio
            </a>
            <a href="/servicios" class="text-[--color-lear-gray-700] hover:text-[--color-lear-primary] transition-colors font-medium">
              Servicios
            </a>
            <a href="/equipo" class="text-[--color-lear-gray-700] hover:text-[--color-lear-primary] transition-colors font-medium">
              Equipo
            </a>
            <a href="/sobre-nosotros" class="text-[--color-lear-gray-700] hover:text-[--color-lear-primary] transition-colors font-medium">
              Sobre Nosotros
            </a>
          </div>

          <!-- Mobile menu button -->
          <button
            id="mobile-menu-button"
            class="md:hidden p-2 rounded-md text-[--color-lear-gray-700] hover:text-[--color-lear-primary] hover:bg-[--color-lear-gray-100]"
            aria-label="Abrir menú"
          >
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col space-y-3">
            <a href="/" class="text-[--color-lear-gray-700] hover:text-[--color-lear-primary] transition-colors font-medium px-2 py-1">
              Inicio
            </a>
            <a href="/servicios" class="text-[--color-lear-gray-700] hover:text-[--color-lear-primary] transition-colors font-medium px-2 py-1">
              Servicios
            </a>
            <a href="/equipo" class="text-[--color-lear-gray-700] hover:text-[--color-lear-primary] transition-colors font-medium px-2 py-1">
              Equipo
            </a>
            <a href="/sobre-nosotros" class="text-[--color-lear-gray-700] hover:text-[--color-lear-primary] transition-colors font-medium px-2 py-1">
              Sobre Nosotros
            </a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- About -->
          <div>
            <h3 class="text-lg font-semibold mb-4">LEAR</h3>
            <p class="text-gray-300 text-sm">
              Centro de Fisioterapia & Rehabilitación Integral
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Enlaces Rápidos</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/servicios" class="text-gray-300 hover:text-white transition-colors">Servicios</a></li>
              <li><a href="/equipo" class="text-gray-300 hover:text-white transition-colors">Equipo</a></li>
              <li><a href="/sobre-nosotros" class="text-gray-300 hover:text-white transition-colors">Sobre Nosotros</a></li>
            </ul>
          </div>

          <!-- Contact (placeholder for future) -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Contacto</h3>
            <p class="text-gray-300 text-sm">
              Información de contacto próximamente
            </p>
          </div>
        </div>

        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400 text-sm">
          <p>&copy; {new Date().getFullYear()} LEAR. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>

    <!-- Mobile menu toggle script -->
    <script>
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
